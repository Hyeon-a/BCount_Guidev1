<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffF6"
    tools:context="com.example.sohee.guide_v1.MenuActivity">


    <Button
        android:id="@+id/registmenubtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_filled_oval"
        android:backgroundTint="#FFCBCB"
        android:onClick="OnRegistmenubtnClicked"
        android:text="        REGISTRATION      "
        android:textColor="#FFFFF6"
        android:textSize="13dp"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/titletxtview4"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/checkmenubtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registmenubtn"
        android:layout_alignStart="@+id/registmenubtn"
        android:layout_below="@+id/registmenubtn"
        android:layout_marginTop="57dp"
        android:background="@drawable/pink_filled_oval"
        android:backgroundTint="#FFCBCB"
        android:onClick="OnCheckbtnClicked"
        android:text="      CHECK      "
        android:textColor="#FFFFF6"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/titletxtview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text="MENU"
        android:textColor="#FFCBCB"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

